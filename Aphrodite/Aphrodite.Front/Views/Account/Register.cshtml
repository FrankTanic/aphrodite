@model Aphrodite.Front.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FaceDate</title>
    <link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <div class="center-box">
            <div class="row">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    <div class="col-xs-12">
                        <h2 class="register">@ViewBag.Title nu!</h2>
                        <h4>Maak een nieuw FaceDate account aan.</h4>
                        <div class="form-horizontal">
                            <div class="form-group">
                                <div class="col-xs-6">
                                    <label>Ik ben een</label>
                                    @Html.EnumDropDownListFor(m => m.Gender, new { @class = "form-control" })
                                </div>
                                <div class="col-xs-6">
                                    <label>en ben op zoek naar</label>
                                    @Html.EnumDropDownListFor(m => m.Gender, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            @Html.ValidationMessageFor(m => m.DisplayName)
                            @Html.LabelFor(m => m.DisplayName)
                            @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control", placeholder = "Bijvoorbeeld: Frankie" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            @Html.LabelFor(m => m.BirthDay)
                        </div>
                        <div class="col-xs-4">
                            @Html.TextBoxFor(m => m.BirthDayDay, new { @class = "form-control", placeholder = "DD", maxlength = "2", value = "" })
                        </div>
                        <div class="col-xs-4">
                            @Html.TextBoxFor(m => m.BirthDayMonth, new { @class = "form-control", placeholder = "MM", maxlength = "2", value = "" })
                        </div>
                        <div class="col-xs-4">
                            @Html.TextBoxFor(m => m.BirthDayYear, new { @class = "form-control", placeholder = "YYYY", maxlength = "4", value = "" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            @Html.ValidationMessageFor(m => m.Email)
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-mailadres" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            @Html.LabelFor(m => m.Password)
                            @Html.ValidationMessageFor(m => m.Password)
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Wachtwoord" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Herhaal wachtwoord" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Register" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>