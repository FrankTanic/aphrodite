@model Aphrodite.Front.Models.ProfileViewModel
@{
    ViewBag.Title = "Profiel";
}

<h2>@ViewBag.Title</h2>

@if (ViewBag.StatusMessage != null)
{
    <p class="text-success">@ViewBag.StatusMessage</p>
    
}

<div class="row">
    <div class="col-sm-4 nopadding">
        <div class="profile-image">

            <a href="#" data-toggle="modal" data-target="#facedatemodal">
                <img src="@Url.Content(Model.Photo)" class="photosize" />  
             </a>
         </div>
    </div>
    <div class="col-sm-8 upload-photo">
        @using (Html.BeginForm("Upload", "Manage", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
        {
            <label for="file">Upload een foto van je zelf</label>
            <input id="file-upload" type="file" name="file" class="file" >
            <input type="submit" value="Upload" />
        }
    </div>
</div>

<div class="row">
<div class="block">
   <div class="form-horizontal">
       <div class="form-group">
           <div class="col-sm-10">
               <h3>Algemene info</h3>
           </div>
           <div class="col-sm-2">
               @Html.ActionLink("Aanpassen", "ChangeData", "Manage", new { @class = "edit-link"})
           </div>
       </div>
      <div class="form-group">
         <label class="col-sm-2 control-label">Voornaam</label>
          <div class="col-sm-10">
             <p class="form-control-static">@Model.DisplayName</p>
           </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">E-mailadres</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.Email</p>
            </div>
        </div>
       <div class="form-group">
           <label class="col-sm-2 control-label">Geboortedatum</label>
           <div class="col-sm-10">
               <p class="form-control-static">@Model.Birthday.ToShortDateString()</p>
           </div>
       </div>
       <div class="form-group">
           <label class="col-sm-2 control-label">Geslacht</label>
           <div class="col-sm-10">
               <p class="form-control-static">@Model.Gender</p>
           </div>
       </div>
       <div class="form-group">
           <label class="col-sm-2 control-label">Seksuele voorkeur</label>
           <div class="col-sm-10">
               <p class="form-control-static">@Model.SexualPreference</p>
           </div>
       </div>
    </div>
</div>
</div>
<div class="row">
        @Html.ActionLink("Verander wachtwoord", "ChangePassword")
</div>

