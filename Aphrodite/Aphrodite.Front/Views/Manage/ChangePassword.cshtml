@model Aphrodite.Front.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Verander Wachtwoord";
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Password Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Oude wachtwoord" })
    </div>
    <div class="form-group">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Nieuw wachtwoord" })
    </div>
    <div class="form-group">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Bevestig nieuw wachtwoord" })
    </div>
    <div class="form-group">
            <input type="submit" value="Verander wachtwoord" class="reg-btn" />
    </div>
}
        </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}